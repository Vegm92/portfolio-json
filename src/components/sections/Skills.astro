---
import Section from "../Section.astro";
import { skills } from "@cv";
---


<Section title="Skills">
	<ul>
		{skills.map(({name}) =>(
			<li>
			<span>{name}</span>
			</li>
		))
		}
	</ul>

</Section>

<style>
	ul {
		display: inline-flex;
		gap: 8px;
		flex-wrap: wrap ;
	}

	li {
		border-radius: 6px;
		background: #80e5a3;
		color: black;
		font-size: .8rem;
		font-weight: 500;
		padding: 0.2rem 0.6rem;

	}

	  li:hover {
    background: #28d263;
		transition: all 0.3s ease;

  }
</style>
